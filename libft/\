#include <stddef.h>

size_t	ft_strlcpy(char *dest, const char *src, size_t n)
{
	size_t	len;
	size_t	cnt;
	const char *start;
	
	start = src;
	len = -1;
	cnt = 0;
	if (!src)
		return (0);
	while (++len < n-1 && *src && *dest)
		*(dest++) = *(src++);
	*(dest) = 0;
	while (*src++)
		len++;
	while (*start)
		cnt++;
	return (cnt);
}
